<div class="container my-4">
  <!-- Question Section -->
  <div class="card mb-4">
    <div class="card-header">
      <h2 class="h4 mb-0">Your Question</h2>
    </div>
    <div class="card-body">
      <p class="lead mb-0"><%= @question %></p>
    </div>
  </div>

  <!-- Answer Section -->
  <div class="card mb-4">
    <div class="card-header">
      <h2 class="h4 mb-0">Coach's Answer</h2>
    </div>
    <div class="card-body">
      <p class="lead mb-0"><%= @response %></p>
    </div>
  </div>

  <!-- Link to Ask Another Question -->
  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Ask another question", ask_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
